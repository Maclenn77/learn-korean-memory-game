<p id="notice"><%= notice %></p>

<h1>Words</h1>

<%= react_component("HelloWorld", { greeting: "Hello from react-rails." }) %>

<table>
  <thead>
    <tr>
      <th>Hangul</th>
      <th>Romaja</th>
      <th>Imageurl</th>
      <th>Audiofile</th>
      <th>Topiklevel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.hangul %></td>
        <td><%= word.romaja %></td>
        <td><%= word.imageurl %></td>
        <td><%= word.audiofile %></td>
        <td><%= word.topiklevel %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
